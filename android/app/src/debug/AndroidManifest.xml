<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The INTERNET permission is required for development. Specifically,
         the Flutter tool needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> <!-- Acceso a la galería -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- Escritura en el almacenamiento externo (para guardar fotos y audios) -->
    <uses-permission android:name="android.permission.CAMERA"/> <!-- Acceso a la cámara -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/> <!-- Grabar audio -->

</manifest>
